<table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Available</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %> 
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, product_path(product) %></td>
            <td><%= product.availability %></td>
            <td><%= product.price.to_f / 100 %></td>
            <td><%= link_to "Edit", edit_product_path(product) %></td>
          </tr>
        <% end %>
        </tbody>
</table>