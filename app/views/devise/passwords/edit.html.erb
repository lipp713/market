<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin"}) do |f| %>
	<h2 class="text-center">Change Password</h2>
  <%= f.error_notification %>

  

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

    <%= f.input :password, required: true, autofocus: true, label: false, placeholder: "New Password", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm Password", input_html: {class: "form-control"} %>


    <%= f.button :submit, "Change my password", class: "btn btn-primary btn-block" %>
    
    <%= render "devise/shared/links" %>

<% end %>